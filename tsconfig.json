{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",

        "types": ["reflect-metadata"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": false,
        "noResolve": false
    },
    "exclude": [
        "node_modules"
    ]
}
