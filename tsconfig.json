{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",

        "types": ["reflect-metadata"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true
    }
}
